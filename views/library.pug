extends layout.pug
    
block content    
    a(onclick='goBack()', class = 'back-button button') < Back to dashboard

    h1 Your entire music library, REWRAPPED! âœ¨

    div
        if lowest && lowest.length > 0
            table 
                each t in lowest
                    tr 
                    - var artist_name = t.artists[0].name
                    - var track_name = t.name
                    - var track_preview = t.preview_url

                    td #{track_name} - #{artist_name}
                    td: a(href=track_preview) Preview
        else 
            p We couldn't find any songs in your library to rewrap! Time to lay down some new tracks!

    //////////////
    // SCRIPTS //
    script.
        function goBack() {
            window.history.back();
        }