extends layout.pug
    
block content    
    img(src=playlist.images[0].url, class='square_image')
    h1 #{playlist.name} REDISCOVERED! âœ¨

    a(href='/createplaylist?id=' + playlist.id) Create a playlist with these songs on Spotify

    table 
      each t in lowest
        tr 
          - var artist_name = t.artists[0].name
          - var track_name = t.name
          - var track_preview = t.preview_url

          td #{track_name} - #{artist_name}
          td: a(href=track_preview) Preview